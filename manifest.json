{
    "manifest_version": 2,
    "name": "Activity Monitor",
    "version": "1.0",
    "description": "Monitors user activity and sends data to MongoDB Atlas.",
    "permissions": [
      "tabs",
      "activeTab",
      "storage",
      "http://*/*",
      "https://*/*",
      "http://localhost:3000/"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  